<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Design</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        h1 {
            text-align: center;
            padding: 20px;
            background-color: #4b4b4b;
            color: whitesmoke !important;
        }

        .card.mb-3 {
            transition: background-color 0.3s ease;
        }

        .card.mb-3:hover {
            background-color: #9e9e9ebf;
        }

        .card-link {
            text-decoration: none;
            color: inherit;
        }
    </style>
</head>
<body>
    <header>
        <%- include('partials/navbar.ejs') %>
    </header>
    <br>
    <h1>Our Services</h1>
    <br>
    <p style="text-align: center; font-size: large;"><strong>Click a Service to Book Now!</strong></p>

    <div class="container">
        <div class="row">
            <% for(let i = 0; i < service.length; i++) { %>
                <div class="col-md-4">
                    <a href="/quote" class="card-link" role="presentation">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><%= service[i].name %></h5>
                                <p class="card-text">
                                    <ul>
                                        <%= service[i].description %>
                                    </ul>
                                </p>
                                <p class="card-text">
                                    <small class="text-body-secondary"><strong>Duration:</strong> <%= service[i].duration %></small>
                                    <br>
                                    <small class="text-body-secondary"><strong>Price:</strong> <%= service[i].price %></small>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
